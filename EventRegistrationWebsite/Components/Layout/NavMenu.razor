@using Microsoft.AspNetCore.Components.Authorization
@implements IDisposable

@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">EventRegistrationWebsite</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        <!-- Public -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="auth">
                <span class="bi bi-lock-nav-menu" aria-hidden="true"></span> Auth Required
            </NavLink>
        </div>

        <!-- ADMIN ONLY (DO NOT CHANGE YOUR GROUPMATE’S EVENTS/PACKAGES LINKS) -->
        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="events">
                        <span class="bi bi-calendar-event-nav-menu" aria-hidden="true"></span> Events
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="packages">
                        <span class="bi bi-calendar-event-nav-menu" aria-hidden="true"></span> Packages
                    </NavLink>
                </div>

                <!-- Your admin access -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="media">
                        <span class="bi bi-image-nav-menu" aria-hidden="true"></span> Media
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="inquiries">
                        <span class="bi bi-envelope-nav-menu" aria-hidden="true"></span> Inquiries
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="notifications">
                        <span class="bi bi-bell-nav-menu" aria-hidden="true"></span> Notifications
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="attendees">
                        <span class="bi bi-people-nav-menu" aria-hidden="true"></span> Attendees
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="waitlists">
                        <span class="bi bi-list-check-nav-menu" aria-hidden="true"></span> Waitlists
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin">
                        <span class="bi bi-shield-lock-nav-menu" aria-hidden="true"></span> Admin
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <!-- USER (your “client”) -->
        <AuthorizeView Roles="User">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="media">
                        <span class="bi bi-image-nav-menu" aria-hidden="true"></span> My Media
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="inquiries/create">
                        <span class="bi bi-envelope-nav-menu" aria-hidden="true"></span> Contact Admin
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="notifications">
                        <span class="bi bi-bell-nav-menu" aria-hidden="true"></span> Notifications
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <!-- ATTENDEE -->
        <AuthorizeView Roles="Attendee">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="attendees/create">
                        <span class="bi bi-person-plus-nav-menu" aria-hidden="true"></span> Event Sign-up
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="waitlists">
                        <span class="bi bi-list-check-nav-menu" aria-hidden="true"></span> Waitlist
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="notifications">
                        <span class="bi bi-bell-nav-menu" aria-hidden="true"></span> Notifications
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <!-- Login/Logout area -->
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Manage">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> @context.User.Identity?.Name
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link">
                            <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                        </button>
                    </form>
                </div>
            </Authorized>

            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Register">
                        <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Register
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>

    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
