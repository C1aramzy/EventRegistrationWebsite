@using Microsoft.AspNetCore.Components.Authorization
@implements IDisposable

@inject NavigationManager Nav

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">EventRegistrationWebsite</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        <!-- HOME (shared route, page handles role) -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                Home
            </NavLink>
        </div>

        <AuthorizeView Context="auth">
            <Authorized>

                @* ================= ADMIN NAV ================= *@
                @if (auth.User.IsInRole("Admin"))
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="events">
                            Manage Events
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="packages">
                            Manage Packages
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="admin/refunds">
                            Refund Approvals
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="admin/achievement-studio">
                            Achievement Studio
                        </NavLink>
                    </div>
                }

                @* ================= USER NAV ================= *@
                else
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="events" Match="NavLinkMatch.Prefix">
                            Events
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="packages">
                            Packages
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="achievements">
                            Achievements
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="my-vouchers">
                            Voucher Wallet
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="my-tickets">
                            My Tickets
                        </NavLink>
                    </div>
                }

                @* ================= ACCOUNT ================= *@
                <div class="nav-item px-3 mt-2">
                    <NavLink class="nav-link" href="Account/Manage">
                        @auth.User.Identity?.Name
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link">
                            Logout
                        </button>
                    </form>
                </div>

            </Authorized>

            @* ================= NOT LOGGED IN ================= *@
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="events/browse">
                        Browse Events
                    </NavLink>
                </div>

                <div class="nav-item px-3 mt-2">
                    <NavLink class="nav-link" href="Account/Register">
                        Register
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>

    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = Nav.ToBaseRelativePath(Nav.Uri);
        Nav.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = Nav.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        Nav.LocationChanged -= OnLocationChanged;
    }
}
