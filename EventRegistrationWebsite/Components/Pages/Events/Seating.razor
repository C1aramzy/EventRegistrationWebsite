@page "/events/seating/{id:int}"
@rendermode InteractiveServer

@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using EventRegistrationWebsite.Data
@using EventRegistrationWebsite.Models

@attribute [Authorize(Roles = "Admin")]

@inject ApplicationDbContext Db
@inject NavigationManager Nav

<h3 class="mb-3">Seating editor</h3>

@if (ev == null)
{
    <div class="alert alert-warning">Event not found</div>
    <button class="btn btn-outline-secondary" @onclick="GoBack">Back</button>
}
else if (ev.EventType != "Performance")
{
    <div class="alert alert-info mb-0">
        Seating is only available for Performance events.
    </div>
    <div class="mt-3">
        <button class="btn btn-outline-secondary" @onclick="GoBack">Back</button>
    </div>
}
else
{
    <div class="card mb-3">
        <div class="card-body">
            <div class="fw-semibold">@ev.Title</div>
            <div class="text-muted">
                @($"{ev.StartDate:dd MMM yyyy} to {ev.EndDate:dd MMM yyyy}")
            </div>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(msg))
    {
        <div class="alert alert-success">@msg</div>
    }
    @if (!string.IsNullOrWhiteSpace(err))
    {
        <div class="alert alert-danger">@err</div>
    }

    <div class="row g-3">
        <div class="col-12 col-lg-4">
            <div class="card">
                <div class="card-body">
                    <div class="fw-semibold mb-2">Generate seats</div>

                    <div class="mb-2">
                        <label class="form-label">Section name</label>
                        <input class="form-control" @bind="sectionName" />
                    </div>

                    <div class="row g-2">
                        <div class="col-6">
                            <label class="form-label">Rows</label>
                            <input class="form-control" type="number" @bind="rowCount" />
                        </div>
                        <div class="col-6">
                            <label class="form-label">Seats per row</label>
                            <input class="form-control" type="number" @bind="seatsPerRow" />
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-3">
                        <button class="btn btn-primary" @onclick="GenerateSeats">
                            Generate
                        </button>

                        <button class="btn btn-outline-danger" @onclick="ResetSeats">
                            Reset seats
                        </button>

                        <button class="btn btn-outline-secondary" @onclick="GoBack">
                            Back to events
                        </button>
                    </div>

                    <div class="text-muted small mt-3">
                        Generate will only add seats if none exist for this event.
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-8">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="fw-semibold">Seat map</div>
                        <div class="text-muted small">
                            Available: @availableCount
                            Held: @heldCount
                            Sold: @soldCount
                        </div>
                    </div>

                    <div class="seatGrid">
                        @foreach (var row in seatRows)
                        {
                            <div class="seatRow">
                                <div class="rowLabel">@row.Key</div>

                                <div class="rowSeats">
                                    @foreach (var s in row.Value)
                                    {
                                        <span class="seat @(SeatClass(s.Status))" title="@($"{s.Section} {s.RowLabel}{s.SeatNumber} {s.Status}")">
                                            @s.SeatNumber
                                        </span>
                                    }
                                </div>
                            </div>
                        }
                    </div>

                    @if (seatRows.Count == 0)
                    {
                        <div class="text-muted">No seats created yet.</div>
                    }
                </div>
            </div>
        </div>
    </div>

    <style>
        .seatGrid {
            display: grid;
            gap: 10px;
        }

        .seatRow {
            display: grid;
            grid-template-columns: 40px 1fr;
            gap: 10px;
            align-items: center;
        }

        .rowLabel {
            font-weight: 700;
            color: rgba(0,0,0,0.6);
        }

        .rowSeats {
            display: flex;
            flex-wrap: wrap;
            gap: 6px;
        }

        .seat {
            width: 34px;
            height: 34px;
            border-radius: 8px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
            border: 1px solid rgba(0,0,0,0.12);
            background: white;
        }

            .seat.av {
                background: rgba(25,135,84,0.12);
                border-color: rgba(25,135,84,0.35);
            }

            .seat.held {
                background: rgba(255,193,7,0.18);
                border-color: rgba(255,193,7,0.45);
            }

            .seat.sold {
                background: rgba(220,53,69,0.18);
                border-color: rgba(220,53,69,0.45);
            }
    </style>
}

@code {
    [Parameter] public int id { get; set; }

    private Event? ev;

    private string msg = "";
    private string err = "";

    private string sectionName = "Main";
    private int rowCount = 10;
    private int seatsPerRow = 12;

    private Dictionary<string, List<EventSeat>> seatRows = new();

    private int availableCount;
    private int heldCount;
    private int soldCount;

    protected override async Task OnInitializedAsync()
    {
        ev = await Db.Events.FirstOrDefaultAsync(x => x.EventID == id);
        await LoadSeats();
    }

    private async Task LoadSeats()
    {
        seatRows.Clear();
        availableCount = 0;
        heldCount = 0;
        soldCount = 0;

        if (ev == null) return;

        var seats = await Db.EventSeats
            .Where(x => x.EventID == ev.EventID)
            .OrderBy(x => x.Section)
            .ThenBy(x => x.RowLabel)
            .ThenBy(x => x.SeatNumber)
            .ToListAsync();

        foreach (var s in seats)
        {
            if (s.Status == "Available") availableCount++;
            else if (s.Status == "Held") heldCount++;
            else if (s.Status == "Sold") soldCount++;

            if (!seatRows.ContainsKey(s.RowLabel))
            {
                seatRows[s.RowLabel] = new List<EventSeat>();
            }
            seatRows[s.RowLabel].Add(s);
        }
    }

    private async Task GenerateSeats()
    {
        msg = "";
        err = "";

        if (ev == null) return;

        if (ev.EventType != "Performance")
        {
            err = "Seating is only for Performance events.";
            return;
        }

        if (rowCount < 1 || rowCount > 26)
        {
            err = "Rows must be between 1 and 26.";
            return;
        }

        if (seatsPerRow < 1 || seatsPerRow > 40)
        {
            err = "Seats per row must be between 1 and 40.";
            return;
        }

        var exists = await Db.EventSeats.AnyAsync(x => x.EventID == ev.EventID);
        if (exists)
        {
            err = "Seats already exist. Use Reset seats if you want to regenerate.";
            return;
        }

        var list = new List<EventSeat>();

        for (var r = 0; r < rowCount; r++)
        {
            var rowLabel = ((char)('A' + r)).ToString();

            for (var n = 1; n <= seatsPerRow; n++)
            {
                list.Add(new EventSeat
                {
                    EventID = ev.EventID,
                    Section = string.IsNullOrWhiteSpace(sectionName) ? "Main" : sectionName.Trim(),
                    RowLabel = rowLabel,
                    SeatNumber = n,
                    Status = "Available"
                });
            }
        }

        Db.EventSeats.AddRange(list);
        await Db.SaveChangesAsync();

        msg = $"Generated {list.Count} seats.";
        await LoadSeats();
    }

    private async Task ResetSeats()
    {
        msg = "";
        err = "";

        if (ev == null) return;

        var seats = await Db.EventSeats.Where(x => x.EventID == ev.EventID).ToListAsync();
        if (seats.Count == 0)
        {
            err = "No seats to reset.";
            return;
        }

        Db.EventSeats.RemoveRange(seats);
        await Db.SaveChangesAsync();

        msg = "Seats cleared.";
        await LoadSeats();
    }

    private void GoBack()
    {
        Nav.NavigateTo("/events");
    }

    private static string SeatClass(string status)
    {
        if (status == "Sold") return "sold";
        if (status == "Held") return "held";
        return "av";
    }
}
