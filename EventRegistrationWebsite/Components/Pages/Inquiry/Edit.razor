@page "/inquiries/edit"
@using EventRegistrationWebsite.Data
@using EventRegistrationWebsite.Models
@inject ApplicationDbContext Db
@inject NavigationManager NavigationManager

<PageTitle>Edit Inquiry</PageTitle>

@if (Inquiry == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <EditForm Model="Inquiry" OnValidSubmit="UpdateInquiry">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-2">
            <label>Reply</label>
            <InputTextArea @bind-Value="Inquiry.ReplyMessage" class="form-control" />
        </div>

        <button class="btn btn-primary">Save</button>
    </EditForm>
}

<a href="/inquiries">Back</a>

@code {
    private Inquiry? Inquiry;

    [SupplyParameterFromQuery]
    public int InquiryID { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Inquiry = await Db.Inquiries.FindAsync(InquiryID);
        if (Inquiry == null)
            NavigationManager.NavigateTo("/inquiries");
    }

    private async Task UpdateInquiry()
    {
        await Db.SaveChangesAsync();
        NavigationManager.NavigateTo("/inquiries");
    }
}
