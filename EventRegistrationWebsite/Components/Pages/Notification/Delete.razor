@page "/notifications/delete"
@using EventRegistrationWebsite.Data
@using EventRegistrationWebsite.Models
@inject ApplicationDbContext Db
@inject NavigationManager NavigationManager

<PageTitle>Delete Notification</PageTitle>

<h1>Delete Notification</h1>
<hr />

@if (notification == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <p>Are you sure you want to delete this notification?</p>

    <strong>@notification.Message</strong>

    <br />
    <br />

    <button class="btn btn-danger" @onclick="DeleteNotification">Delete</button>
    <a class="btn btn-secondary ms-2" href="/notifications">Cancel</a>
}

@code {
    private Notification? notification;

    [SupplyParameterFromQuery]
    public int NotificationID { get; set; }

    protected override async Task OnInitializedAsync()
    {
        notification = await Db.Notifications.FindAsync(NotificationID);
        if (notification == null)
            NavigationManager.NavigateTo("/notifications");
    }

    private async Task DeleteNotification()
    {
        Db.Notifications.Remove(notification!);
        await Db.SaveChangesAsync();
        NavigationManager.NavigateTo("/notifications");
    }
}

