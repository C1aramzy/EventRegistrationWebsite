@page "/packages/delete/{id:int}"
@rendermode InteractiveServer

@using EventRegistrationWebsite.Models
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components
@using Microsoft.EntityFrameworkCore

@attribute [Authorize(Roles = "Admin")]

@inject EventRegistrationWebsite.Data.ApplicationDbContext Db
@inject NavigationManager Nav

<h3 class="mb-3">Delete Package</h3>

@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

@if (pkg == null)
{
    <div class="alert alert-warning">Package not found.</div>
    <button class="btn btn-outline-secondary" @onclick="Back">Back</button>
}
else
{
    <div class="card">
        <div class="card-body">
            <p class="mb-2">You are deleting:</p>
            <div class="fw-bold">@pkg.PackageName</div>
            <div class="text-muted">@pkg.Description</div>

            <div class="mt-3 text-muted">
                Events in package: @(pkg.PackageEvents?.Count ?? 0)
            </div>

            <div class="d-flex gap-2 mt-4">
                <button class="btn btn-danger" @onclick="ConfirmDelete" disabled="@busy">
                    @(busy ? "Deleting..." : "Delete")
                </button>
                <button class="btn btn-outline-secondary" @onclick="Back" disabled="@busy">Cancel</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int id { get; set; }

    private string? error;
    private bool busy;

    private Package? pkg;

    protected override async Task OnInitializedAsync()
    {
        pkg = await Db.Packages
            .Include(p => p.PackageEvents)
            .FirstOrDefaultAsync(p => p.PackageID == id);
    }

    private async Task ConfirmDelete()
    {
        if (pkg == null) return;

        busy = true;
        error = null;

        try
        {
            var links = await Db.PackageEvents
                .Where(x => x.PackageId == pkg.PackageID)
                .ToListAsync();

            Db.PackageEvents.RemoveRange(links);
            Db.Packages.Remove(pkg);

            await Db.SaveChangesAsync();

            Nav.NavigateTo("/packages");
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            busy = false;
        }
    }

    private void Back() => Nav.NavigateTo("/packages");
}
